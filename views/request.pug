extends layout

block content
  .wrapper
    include header
    .container.content
      include nav
      main.main
        section
          .control
            a.control__link(href="/requests")
              span.btn-control
              | Назад
        section
          h2 Заявка № #{request.id} от #{request.createdAt}
          .request__status(class=request.status.className)= request.status.name
          .request-data
            div
              .request__data-row
                span.request__data-name Номер заявки:&nbsp;
                | #{request.id}
              .request__data-row
                span.request__data-name Дата и время создания:&nbsp;
                | #{request.createdAt}
              .request__data-row
                span.request__data-name Комментарий к заявке:&nbsp;
                | #{request.comment}
              .request__data-row
                span.request__data-name Специалист, выполнивший заявку:&nbsp;
                | #{request.specialist}
            div
              .request__data-row
                span.request__data-name Услуга:&nbsp;
                | #{request.name}
              .request__data-row
                span.request__data-name Единица измерения:&nbsp;
                | #{request.unit}
              .request__data-row
                span.request__data-name Количество:&nbsp;
                | #{request.count}
              .request__data-row
                span.request__data-name Сумма:&nbsp;
                | #{request.total}
