extends layout

block content
  .wrapper
    div.nav
      include nav
    main.main
      section
        a.btn.btn_fill.btn-back(href="/services") Назад
      section
      h2 Новая услуга
      .block
        form(method="POST", action="/services")
          .input-section
            label(for="category") Категория:
            select#category.input(name="category", required)
              each category in categories
                option(value=category.id)= category.name
          .input-section
            label(for="name") Название:
            textarea#name.input(type="text", name="name", rows="3", required)
          .input-section
            label(for="unit") Единица измерения:
            select#unit.input(name="unit", required)
              each unit in units
                option(value=unit)= unit
          .input-section
            label(for="cost") Стоимость:
            input#cost.input(type="number", name="cost", required)
          .input-section.center
            button.btn.btn_fill(type="submit") Отправить
    aside.info
      include sidebar
